{
  "rows": 7,
  "widgets": [
    {
      "type": "label",
      "text": "Heading",
      "tattr": "large"
    },
    {
      "type": "label",
      "text": "--- Hello World! ---"
    },
    {
      "type": "checkbox",
      "label": "CheckBox",
      "set": true
    },
    {
      "type": "tbox",
      "text": "0123456789",
      "on_event": "tbox_filter"
    },
    {
      "type": "radiobutton",
      "buttons": [
        "First",
	"Second"
      ],
      "on_event": "radiobutton_callback"
    },
    {
     "type": "slider",
     "min": 0,
     "max": 100,
     "val": 50,
     "on_event": "slider_event"
    },
    {
      "cols": 2,
      "cpadf": "0, 1, 0",
      "cfill": "0, 0",
      "halign": "fill",
      "border": "none",
      "widgets": [
        {
          "type": "button",
          "label": "Cancel",
	  "on_event": "btn_cancel_callback"
	},
        {
          "type": "button",
          "label": "Ok",
	  "on_event": "btn_ok_callback"
	}
      ]
    }
  ]
}
